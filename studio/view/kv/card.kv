                        root.file_manager_open()

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: dp(10)

                    MDBoxLayout:
                        orientation: "horizontal"

                        MDLabel:
                            text: "[color=#4287f5]Seul[/color]"
