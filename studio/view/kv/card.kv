                            group: "check"
                            adaptive_size: True

                    MDBoxLayout:
                        orientation: "horizontal"

                        MDLabel:
                            text: "[color=#4287f5]Tout[/color]"
                            adaptive_size: True
                            markup: True
                        
                        CheckboxLeftWidget:
                            id: check
                            group: "check"
                            adaptive_size: True

