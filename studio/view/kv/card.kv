<CardAudio>
    md_bg_color: "#676767"
    size_hint_y: None
    height: dp(70)

    MDBoxLayout:
        orientation: "vertical"

        MDRelativeLayout:

            IconButtonAction:
                id: microphone
                icon: "microphone"
                adaptive_height: True
                icon_size: dp(30)
                pos_hint:{"center_x": .5, "center_y": .82}
                style: "tonal"
                theme_bg_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "#4287f5"
                adaptive_width: True
            
            MDIconButton:
                icon: "microphone-outline"
                adaptive_height: True
                icon_size: dp(20)
                pos_hint:{"center_x": .4, "center_y": .29}
                style: "tonal"
                theme_bg_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "#4287f5"
                adaptive_width: True

            MDLabel:
                text: "00:00:00"
                pos_hint:{"center_x": .65, "center_y": .29}
                adaptive_width: True
                font_size: dp(12)