<CardAudio>
    md_bg_color: "#676767"
    size_hint_y: None
    height: dp(70)

    MDBoxLayout:
        orientation: "vertical"

        MDRelativeLayout:

            IconButtonAction:
                id: microphone
                icon: "microphone"
