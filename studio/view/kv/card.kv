<CardConnect>:
    md_bg_color: "#676767"
    orientation: 'horizontal'
    text: twoline.text
    secondary_text: twoline.secondary_text
    icon: iconLef.icon
    size_hint_y: None
    height: dp(70)

    TwoLineIconListItem:
        id: twoline
        text: root.text
        secondary_text: root.secondary_text
        IconLeftWidget:
            id: iconLef
            icon: root.icon
            icon_color: "#ffffff"

    IconButtonAction:
        icon: "cog-outline"
        adaptive_height: True
        icon_size: dp(20)
        pos_hint:{"center_y": .5}
        style: "tonal"
        theme_bg_color: "Custom"
        theme_icon_color: "Custom"
        icon_color: "#4287f5"
        adaptive_width: True
        on_release:
            print(root.id)
                
    MDRelativeLayout:
        size_hint_x: None
        width: dp(20)

        MDCard:
            id: bage_card
            md_bg_color: "#fff000"
            size_hint: None, None
            width: dp(10)
            height: dp(10)
            radius: 24
            pos_hint:{"center_x": .1, "center_y": .85}



<CardReducteImage>:
    md_bg_color: "#676767" 
    app: app

    MDScrollView:

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True

            MDBoxLayout:
                orientation: "horizontal"

                MDSpinner:  
                    id: spinner
                    size_hint: None, None
                    size: dp(20), dp(20)
                    pos_hint: {'center_y': .5}
                    active: False
                
                IconButtonAction:
                    id: list_camera
                    icon: "camera-outline"
                    icon_size: dp(20)
                    style: "tonal"
                    theme_bg_color: "Custom"
                    theme_icon_color: "Custom"
                    unfocus_color: '#262626'
                    icon_color: "#4287f5"
                    pos_hint: {"center_y": .5}
                    on_release: root.listcamera()

                ClickableTextFieldRoundCam:
                    id: lien
                    pos_hint: {"center_y": .5}

                MDRectangleFlatButton:
                    text: 'Ouvrir'
                    pos_hint: {'center_x': .4, 'center_y': .5}
                    on_release: 
                        root.open_cam()




<CardScrollImage>:
    md_bg_color: "#676767" #ffffff
    padding: "10dp"
    spacing: "5dp"
    radius: 24
    image: image
    lecture: lecture
    size_hint_y: None
    height: dp(180)
    on_release:
        app.start_card_view()

    MDBoxLayout:
        md_bg_color: "#676767"
        orientation: "vertical"

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(30)

            MDCard:
                id: bage_image
                md_bg_color: "#fff000"
                size_hint: None, None
                width: dp(10)
                height: dp(10)
                radius: 24
                pos_hint:{"center_x": .15, "center_y": .5}

            IconButtonAction:
                id: switch
                icon: "video-switch-outline"
                size_hint_x: .1
                icon_size: dp(15)
                pos_hint:{"center_y": .5}
                style: "tonal"
                theme_bg_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "#4287f5"
                pos_hint:{"center_x": .55, "center_y": .5}
                on_release:
                    # if self.icon == 'play' root.camController.on_play() else root.camController.on_break()

            IconButtonAction:
                id: save
                icon: "content-save-outline"
                size_hint_x: .1
                icon_size: dp(15)
                pos_hint:{"center_y": .5}
                style: "tonal"
                theme_bg_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "#4287f5"
                pos_hint:{"center_x": .75, "center_y": .5}
                on_release:
                    # if self.icon == 'play' root.camController.on_play() else root.camController.on_break()
            
            IconButtonAction:
                id: close
                icon: "close-outline"
                size_hint_x: .1
                icon_size: dp(15)
                pos_hint:{"center_y": .5}
                style: "tonal"
                theme_bg_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "#4287f5"
                pos_hint:{"center_x": .94, "center_y": .5}
                on_release:
                    # if self.icon == 'play' root.camController.on_play() else root.camController.on_break()


        Image:
            id: image
            source: "studio/asset/texture_image.jpg"
            size_hint: None, None
            width: root.width - dp(50)
            height: root.height - dp(75)
            padding: dp(10)
            pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: "horizontal"
            md_bg_color: "#676767"
            radius: 24

            IconButtonAction:
                id: microphone
                icon: "microphone-off"
                size_hint_x: .1
                icon_size: dp(15)
                pos_hint:{"center_y": .5}
                style: "tonal"
                theme_bg_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "#4287f5"
                on_release:
                    # if self.icon == 'play' root.camController.on_play() else root.camController.on_break()


            IconButtonAction:
                id: play
                icon: "play"
                size_hint_x: .1
                icon_size: dp(15)
                pos_hint:{"center_y": .5}
                style: "tonal"
                theme_bg_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "#4287f5"
                on_release:
                    asynckivy.start(root.camController.on_play()) if self.icon == 'play' else root.camController.on_break()

            IconButtonAction:
                id: stop
                icon: "stop"
                size_hint_x: .1
                icon_size: dp(15)
                pos_hint:{"center_y": .5}
                style: "tonal"
                theme_bg_color: "Custom"
                theme_icon_color: "Custom"
                icon_color: "#4287f5"
                on_release:
                    root.camController.on_stop()

            MDLabel:
                id: lecture
                text: "[color=#ffffff]00:00:00[/color]"
                size_hint_x: .2
                pos_hint:{"center_y": .5}
                font_size: dp(12)
                markup: True
