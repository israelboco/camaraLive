<CardReducteImage>:
    md_bg_color: "#676767" 
    app: app
    padding: dp(10)

    MDScrollView:

        MDBoxLayout:
            orientation: 'vertical'
            # md_bg_color: "ffffff"
            size_hint_y: 1

            MDBoxLayout:
                orientation: "horizontal"
                # md_bg_color: "ffffff"
                adaptive_height: True

                MDSpinner:  
                    id: spinner
                    size_hint: None, None
                    size: dp(20), dp(20)
                    pos_hint: {"center_y": 65}
                    active: False  
                                            
                IconButtonAction:
                    id: list_camera
                    icon: "camera-outline"
                    icon_size: dp(20)
                    style: "tonal"
                    theme_bg_color: "Custom"
                    theme_icon_color: "Custom"
                    icon_color: "#4287f5"
                    pos_hint: {"center_y": .65}
                    on_release: app.listcamera(self)

                ClickableTextFieldRoundRedute:
